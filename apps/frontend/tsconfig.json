{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "tsBuildInfoFile": "./node_modules/.cache/.tsbuildinfo.frontend",
    "paths": {
      "@/*": ["./src/*"],
      "@components/*": ["./src/components/*"],
      "@pages/*": ["./src/pages/*"],
      "@invoice-approval/shared": ["../../packages/shared/src"],
      "@invoice-approval/shared/*": ["../../packages/shared/src/*"]
    }
  },
  "include": ["src/**/*", "vite.config.ts"],
  "references": [
    {
      "path": "../../packages/shared"
    }
  ]
}

